<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_page"
    tools:context=".FaqActivity">

    <RelativeLayout
        android:id="@+id/top_bar_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back Button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="@color/baru"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:id="@+id/logo_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="40dp"> <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_pictabook" />
        </LinearLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_area"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Get to Know PICT A BOO!"
                android:textColor="@color/baru"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo_pictabook"
                android:contentDescription="Logo PICT A BOO"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PICT A BOO is your ultimate creative playground! We're here to turn ordinary moments into something extraordinary with our stylish and adorable photo frames. Just snap a pic, choose your favorite frame, and voilÃ ! Your photo is ready to wow the world. Everything is made with a splash of color and a whole lot of joy!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edition: Version 1.0.0 (Ready to Make Your Photos Pop!)"
                android:textColor="@color/baru"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Got an issue? Tell us at: support@pictaboo.com"
                android:textColor="@color/baru"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>