<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="16dp"
    android:elevation="2dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/faq_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apa itu PICT A BOO?"
        android:textColor="@color/baru"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/faq_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PICT A BOO adalah aplikasi yang memungkinkan Anda mengambil foto dan menambahkan bingkai (frame) unik yang lucu dan kreatif."
        android:textColor="@color/black"
        android:textSize="14sp"/>
</LinearLayout>