<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar EditText -->
    <solid android:color="#FFFFFF"/>

    <!-- Border / garis pinggir -->
    <stroke
        android:width="2dp"
        android:color="#F1B2CC"/>

    <!-- Sudut membulat -->
    <corners android:radius="30dp"/>

    <!-- Padding internal supaya teks tidak nempel ke pinggir -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
